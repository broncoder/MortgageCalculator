<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    tools:context=".MainActivity"
    android:id="@+id/tableLayout"
    android:stretchColumns="1,2,3">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/TableRow0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount Borrowed"
            android:id="@+id/loanTextView"
            android:textColor="#000"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="normal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanEditText"
            android:inputType="number" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/TableRow1"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest Rate"
            android:id="@+id/rateTitleTextView"
            android:textColor="#000"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="normal" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rateSeekBar"
            android:max="1000"
            android:progress="500"
            android:layout_span="3"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:id="@+id/rateTextView"
            android:paddingTop="20dp"
            android:paddingBottom="@dimen/activity_horizontal_margin" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/TableRow2"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Term"
            android:id="@+id/loanTermTextView"
            android:textColor="#000"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="normal" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 years"
                android:id="@+id/radioButton7" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 years"
                android:id="@+id/radioButton15" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 years"
                android:id="@+id/radioButton30" />
        </RadioGroup>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/TableRow3"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax and Insurances"
            android:id="@+id/taxTextView"
            android:textColor="#000"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="normal" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/taxCheckBox" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/TableRow4"
        android:paddingBottom="@dimen/activity_horizontal_margin">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:id="@+id/calculateButton"
            android:textColor="#000"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="bold"
            android:layout_column="1" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/TableRow5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Payment"
            android:id="@+id/paymentTextView"
            android:textColor="#000"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="normal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paymentEditText" />

    </TableRow>

</TableLayout>
